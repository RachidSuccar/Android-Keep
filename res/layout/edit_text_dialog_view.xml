<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/dialog_rounded_corner"
        android:clickable="true" >

        <TextView
            android:id="@+id/TextView_dialoMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/medium_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextView_dialoMessage"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:hint="@string/enter_titlle"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:minHeight="45dp"
            android:singleLine="true"
            android:textColor="@color/medium_gray"
            android:textColorHint="@color/light_gray" >

            <requestFocus />
        </EditText>

        <View
            android:id="@+id/Divider_dialog"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/editText_categoryTitle"
            android:background="@color/light_gray" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_below="@id/Divider_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayout_dismissB"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/RelativeLayout_Action"
            android:layout_alignLeft="@+id/Divider_dialog"
            android:layout_alignStart="@+id/Divider_dialog"
            android:layout_below="@+id/Divider_dialog"
            android:layout_toLeftOf="@+id/view1"
            android:layout_toStartOf="@+id/view1"
            android:background="@drawable/on_pressed_light_gray"
            android:clickable="true" >

            <TextView
                android:id="@+id/TextView_Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="@string/cancel"
                android:textColor="@color/medium_gray"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout_Action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/Divider_dialog"
            android:layout_alignRight="@+id/Divider_dialog"
            android:layout_below="@+id/Divider_dialog"
            android:layout_toEndOf="@+id/view1"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/on_pressed_light_gray" >

            <TextView
                android:id="@+id/TextView_ActionT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/medium_gray"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>