<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dialog_rounded_corner"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/RelativeLayout_optionOne"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/on_pressed_light_gray"
            android:clickable="true" >

            <ImageView
                android:id="@+id/imageView_iconOne"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/CustomTextView_optionOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView_iconOne"
                android:text="@string/delete_pass"
                android:textColor="@color/the_blue"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/deivider_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/RelativeLayout_optionOne"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/RelativeLayout_optionTwo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/deivider_one"
            android:background="@drawable/on_pressed_light_gray"
            android:clickable="true" >

            <ImageView
                android:id="@+id/imageView_iconTwo"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/CustomTextView_optionTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageView_iconTwo"
                android:text="@string/delete_pass"
                android:textColor="@color/the_blue"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/Rachid/Desktop/Projects/Keep/Password%20Manager/Keep/res/layout/two_option_dialog.xml -->